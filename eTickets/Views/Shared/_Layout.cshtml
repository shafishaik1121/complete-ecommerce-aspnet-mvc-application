<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eTickets.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm nav nav-tabs bg-dark border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Movies" asp-action="Index">Tickets</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-nav flex-grow-1">
                        <div class="navbar-nav flex-grow-1">
                            <a class="nav-link text-white" asp-controller="Movies" asp-action="Index"><i class="badge-info bi-film"></i> Movies</a>

                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Management
                                    </a>

                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels-fill"></i> Cinemas</a></li>
                                        <li><a class="dropdown-item" asp-controller="Producers" asp-action="Index"><i class="bi bi-people-fill"></i> Producers</a></li>
                                        <li><a class="dropdown-item" asp-controller="Actors" asp-action="Index"><i class="bi bi-person-circle"></i> Actors</a></li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                    <form class="form-inline my-2 my-lg-0" asp-controller="Movies" asp-action="Filters" style="padding-right:25px;">
                        <div class="input-group mb-6">
                            <input name="SearchString" type="text" class="form-control btn-outline-light" placeholder="Search for a movie..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-primary my-2 my-sm-0"><i class="bi bi-search-heart"></i></button>
                            </div>
                        </div>
                    </form>

                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>
                    <partial name="_Identity.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @*<div class="container">
        &copy; 2023 - eTickets
        </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
